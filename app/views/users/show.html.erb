<%= provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= image_tag gravatar_url(@user.email, 128) %>
      <h1><%= @user.name %></h1>
      <p><%= @user.email %></p>
    </div>
    <div class="col-sm-3">
      <% games_played.each do |game| %>
        <p>
          <%= "#{game[:player_one_score] || 0} - #{game[:player_two_score] || 0} " + winner(game)%>
        </p>
      <% end %>
    </div>
    <div class="col-sm-6">
      <br>
      <%= pie_chart hit_percentage, id: 'users-chart' %>
      <p>
        Percent hits based on number
      </p>
      <%= pie_chart games_won.merge(games_lost), id: 'win-loss-chart' %>
      <p>
        Win percentage
      </p>
    </div>
  </div>
</div>
