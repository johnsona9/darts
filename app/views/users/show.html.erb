<%= provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <%= image_tag gravatar_url(@user.email, 128) %>
      <h1><%= @user.name %></h1>
      <p><%= @user.email %></p>
    </div>
    <div class="col-sm-8">
      <% games_played.each do |game| %>
        <p>
          <%= "#{game[:player_one_score] || 0} - #{game[:player_two_score] || 0} " + winner(game)%>
        </p>
      <% end %>
    </div>
  </div>
</div>
