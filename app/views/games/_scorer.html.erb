<!-- scorer partial -->
<div class="row">
  <div class="col-sm-4">
    <h1><%= button_to("#{@game['player_one_' + score]}", games_update_player_path(id: @game.id, player: 'one', score: score), method: :post, class: 'button', id: "player_one_#{score}") %></h1>
  </div>
  <div class="col-sm-1">
    <%= image_tag('zero.png', class: 'image', id: "player_one_#{score}_img") if @game['player_one_' + score] == 0 %>
    <%= image_tag('one.png', class: 'image', id: "player_one_#{score}_img") if @game['player_one_' + score] == 1 %>
    <%= image_tag('two.png', class: 'image', id: "player_one_#{score}_img") if @game['player_one_' + score] == 2 %>
    <%= image_tag('three.png', class: 'image', id: "player_one_#{score}_img") if @game['player_one_' + score] > 2 %>
  </div>
  <div class="col-sm-2">
      <h1><%= score %></h1>
  </div>
  <div class="col-sm-1">
    <%= image_tag('zero.png', class: 'image', id: "player_two_#{score}_img") if @game['player_two_' + score] == 0 %>
    <%= image_tag('one.png', class: 'image', id: "player_two_#{score}_img") if @game['player_two_' + score] == 1 %>
    <%= image_tag('two.png', class: 'image', id: "player_two_#{score}_img") if @game['player_two_' + score] == 2 %>
    <%= image_tag('three.png', class: 'image', id: "player_two_#{score}_img") if @game['player_two_' + score] > 2 %>
  </div>
  <div class="col-sm-4">
    <h1><%= button_to("#{@game['player_two_' + score]}", games_update_player_path(id: @game.id, player: 'two', score: score), method: :post, class: 'button', id: "player_two_#{score}") %></h1>
  </div>
</div>
